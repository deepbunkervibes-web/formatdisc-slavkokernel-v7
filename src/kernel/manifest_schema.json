{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://a-naos.dev/schemas/manifest/v1.0.0",
  "title": "A-NAOS Manifest",
  "description": "Canonical state manifest for A-NAOS Sovereign Runtime v12.2",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "$schemaVersion": {
      "type": "string",
      "description": "Version of the manifest schema",
      "default": "1.0.0"
    },
    "root": { "type": "string" },
    "epoch": { "type": "integer", "minimum": 0 },
    "timestamp": { "type": "string", "format": "date-time" },
    "operatorId": { "type": "string" },
    "parent": { "type": ["string", "null"] },
    "note": { "type": "string" },
    "signature": { "type": "string" },
    "signatureAlgorithm": { "type": "string" },
    "merkleTree": {
      "type": "array",
      "items": { "type": "string" }
    },
    "chunkCount": { "type": "integer", "minimum": 0 },
    "totalSize": { "type": "integer", "minimum": 0 },
    "policyTags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "policyWeights": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    }
  },
  "required": ["root", "epoch", "timestamp", "operatorId", "parent", "signature", "signatureAlgorithm", "merkleTree", "chunkCount", "totalSize"]
}
